Bootstrap: docker
From: alpine:latest

%files

    unprivileged_template
    proxy_template

%environment

    export NGINX_CMD="{{ nginx_cmd }}"

%post

    apk update
    apk add nginx

    sed "s|REPO_ROOT|{{ repo_root }}|g" /unprivileged_template > /etc/nginx/unprivileged.conf 
    sed "s|SMRT_ROOT|{{ smrt_root }}|g" /proxy_template > /etc/nginx/proxy.conf

%startscript

    eval $NGINX_CMD